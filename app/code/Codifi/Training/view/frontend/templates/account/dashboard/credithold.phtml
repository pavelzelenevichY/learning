<?php if ($block->checkForOneTimeDemoMessage()): ?>
    <div class="confirmation-modal-content">
        <p><?= $block->escapeHtml($block->getMessage()) ?></p>
    </div>
    <script>
        require([
            'jquery',
            'Magento_Customer/js/customer-data',
            'Magento_Ui/js/modal/confirm'
        ], function ($, customerData) {
            'use strict';

            var customsection = customerData.get('credit_hold_section');
            customsection.subscribe(function (updatedCustomer)
            {
                console.log(updatedCustomer);
                var creditHold = updatedCustomer.credit_hold;

                if (creditHold) {

                    $('.confirmation-modal-content').confirm({
                        actions: {
                            always: function () {
                                $.ajax({
                                    type: "POST",
                                    url: '<?= $block->escapeJs($block->getSaveUrl()) ?>',
                                    data: {
                                        'note': $.mage.__('Customer is notified about credit hold.'),
                                        'customer_id': '<?= $block->escapeJs($block->getCustomerId()) ?>'
                                    },
                                    success: function (data) {
                                    }
                                });
                            }
                        },
                        buttons: [{
                            text: $.mage.__('OK'),
                            class: 'action primary action-accept',
                            click: function (event) {
                                this.closeModal(event, true);
                            }
                        }]
                    });

                }

            }, this);

        });
    </script>
<?php endif; ?>
