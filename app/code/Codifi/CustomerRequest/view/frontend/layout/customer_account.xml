<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="customer_account_navigation">
        <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-send-request-link" after="customer-account-navigation-newsletter-subscriptions-link">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">Send Request</argument>
                <argument name="path" xsi:type="string">customer/request/index</argument>
            </arguments>
        </block>
        <block class="Magento\Customer\Block\Account\Customer" name="customer_credit_hold_section" after="-" template="Codifi_CustomerRequest::customer/credit_hold_section.phtml" />
    </referenceBlock>
</page>
